{
  "manifest_version": 3,
  "name": "Nana's Code Review",
  "version": "1.0",
  "description": "Injects an image overlay on webpages and provides a popup for extracted content.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["carousel_inject.js"],
      "run_at": "document_idle",
      "css":["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "image0.png",
        "image1.png",
        "image2.png",
        "image3.png",
        "image4.png",
        "image5.png",
        "image6.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
